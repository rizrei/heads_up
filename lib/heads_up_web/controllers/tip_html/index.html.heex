<Layouts.app flash={@flash}>
  <div class="tips">
    <h1>Safety Tips</h1>
    <p>
      {@emojis}
    </p>
    <ol>
      <%= for tip <- @tips do %>
        <li>
          <a href={~p"/tips/#{tip.id}"}>
            {tip.text}
          </a>
        </li>
      <% end %>
    </ol>
  </div>
</Layouts.app>
